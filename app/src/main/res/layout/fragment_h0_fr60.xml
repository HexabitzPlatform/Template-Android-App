<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hexabitz.hexabitzdemoapp.tabs_fragments.H01R00Fragment">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layoutRelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:visibility="visible">

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/txtTimeout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:ems="10"
            android:layout_weight="2"
            android:layout_margin="3dp"
            android:textSize="22sp"
            android:inputType="number"
            android:textCursorDrawable="@color/black"
            android:text="1000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="mSec"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/relay_on_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:onClick="OnToggleRelay"
            android:text="OFF" />
    </LinearLayout>

    <Button
        android:id="@+id/toggle_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="2dp"
        android:onClick="toggle"
        android:text="Toggle Off"
        android:layout_below="@id/layoutRelay"/>


</RelativeLayout>