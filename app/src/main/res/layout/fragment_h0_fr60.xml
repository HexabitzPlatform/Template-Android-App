<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hexabitz.hexabitzdemoapp.tabs_fragments.H01R00Fragment">



    <TextView
        android:id="@+id/module_id_lbl"
        android:layout_margin="12dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Module ID:" />

    <EditText
        android:id="@+id/module_id_r60_et"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="1"
        android:hint="Module ID"
        android:layout_marginTop="7dp"
        android:textColor="@color/colorPrimaryDark"
        android:textCursorDrawable="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/module_id_lbl"/>

    <TextView
        android:id="@+id/time_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/module_id_lbl"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text="Toggle for: "/>

    <EditText
        android:id="@+id/txtTimeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/time_lbl"
        android:layout_alignBaseline="@id/time_lbl"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        android:inputType="number"
        android:ems="4"
        android:textCursorDrawable="@color/black"
        android:text="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignBottom="@id/time_lbl"
        android:layout_toRightOf="@id/txtTimeout"
        android:text="mSec" />

    <Button
        android:id="@+id/relay_on_btn"
        android:layout_below="@id/time_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="8dp"
        android:layout_margin="5dp"
        android:text="OFF" />



    <Button
        android:id="@+id/toggle_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="2dp"
        android:text="Toggle Off"
        android:layout_below="@id/relay_on_btn"/>


</RelativeLayout>